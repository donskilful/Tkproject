<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tracking Logs</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
            text-align: center;
            padding: 20px;
        }

        .container {
            background: rgba(255, 255, 255, 0.15);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            width: 80%;
            margin: auto;
        }

        h2 {
            color: #f8f8f8;
        }

        input, button {
            padding: 10px;
            margin: 10px;
            border: none;
            border-radius: 5px;
        }

        input {
            width: 200px;
            font-size: 16px;
        }

        button {
            background: #ff5722;
            color: white;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background: #e64a19;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: white;
            color: black;
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ddd;
        }

        th {
            background: #333;
            color: white;
        }

        tr:hover {
            background: #f1f1f1;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Visitor Logs</h2>
        <label for="adminKey">Enter Admin Key:</label>
        <input type="password" id="adminKey" />
        <button onclick="togglePassword()">Show</button>
        <button onclick="loadLogs()">Load Logs</button>

        <table>
            <thead>
                <tr>
                    <th>IP</th>
                    <th>Location</th>
                    <th>Browser</th>
                    <th>OS</th>
                    <th>Device</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody id="logTable"></tbody>
        </table>
    </div>

    <script>
    async function loadLogs() {
        const key = document.getElementById("adminKey").value;
        if (!key) {
            alert("Please enter the admin key.");
            return;
        }

        try {
            const res = await fetch("/logs", {
                method: "GET",
                headers: {
                    "Content-Type": "application/json",
                    "x-admin-key": key
                }
            });

            const data = await res.json();
            if (!res.ok) {
                throw new Error(data.error || "Unknown error occurred");
            }

            let rows = "";
            data.forEach(v => {
                rows += `<tr>
                    <td>${v.ip}</td>
                    <td>${v.location?.city || "Unknown"}, ${v.location?.country || "Unknown"}</td>
                    <td>${v.browser}</td>
                    <td>${v.os}</td>
                    <td>${v.device || "Unknown Device"}</td>
                    <td>${new Date(v.timestamp).toLocaleString()}</td>
                </tr>`;
            });
            document.getElementById("logTable").innerHTML = rows;
        } catch (error) {
            console.error("Error fetching logs:", error);
            alert(`Error: ${error.message}`);
        }
    }
    </script>

</body>
</html>
